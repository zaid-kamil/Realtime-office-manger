<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/home"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Feedback">

    <TextView
        android:id="@+id/lblHowHappy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:gravity="center"
        android:text="How happy are you with RealTime Office Manager ?"
        android:textColor="#d32141"
        android:textSize="17sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"

        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layoutForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/lblWeHearFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:text="Yayy! We'd love to hear more"
            android:textColor="#b4bdda15"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtComments"
            android:layout_width="303dp"
            android:layout_height="144dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/home"
            android:gravity="top|left"
            android:hint="Your Comments..."
            android:lines="6"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/starNormalColor"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/lblThanksFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Woah! Thank you for your feedback!"
            android:textColor="#ef731b"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>